root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.json]
indent_size = 4

[Makefile*]
tab_width = 2
indent_size = 2
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72

[*.{MD,md}]
max_line_length = 85

